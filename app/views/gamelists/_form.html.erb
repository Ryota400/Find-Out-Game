<%= form_with model: gamelist, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :body, "ゲームサイトURL" %>
    <%= f.url_field  :body, class: 'form-control js-text', placeholder: 'https://....' %>
  </div>
  <div class="form-group">
    <%= f.label :title, "ツイート内容" %>
    <%= f.text_area :title, class: 'form-control js-text', rows: 6, placeholder: 'ゲーム名・おすすめの理由・遊びたい理由など'	%>
  </div>

  <p class="js-text-count pull-right"></p>
  <%= f.submit 'ツイート', class: 'btn btn-primary' %>
<% end %>
