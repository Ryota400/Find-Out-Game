<div class="col-sm-7 col-lg-4 mb-2">
  <div id="gamelist-id-<%= gamelist.id %>">
    <div class="card">
      <div class="card-body">
        <%= link_to (image_tag gamelist.user.image, size: '50x50', class: 'rounded-circle'), "https://twitter.com/#{gamelist.user.username}",{target: '_blank'} %>
        <p class="card-title">
          <%= link_to gamelist.gametitle, gamelist_path(gamelist) %>
        </p>
        <p><iframe src="https://hatenablog-parts.com/embed?url=<%= gamelist.body %>" class="embed-card embed-webcard" scrolling="no" frameborder="0" style="display: block; width: 100%; height: 155px; max-width: 500px; margin: auto; "></iframe></p>
        <p1 class="text-left text-white">評価 :<%= gamelist.star %>点</p1>
        <p2 id="star-rate<%= gamelist.id%>"></p2>
          <script>
            $('#star-rate<%= gamelist.id %>').raty({
              size    : 36,
              starOff : '<%= asset_path('star-off.png') %>',
              starOn  : '<%= asset_path('star-on.png') %>',
              half    : false,
              readOnly: true,
              score: '<%= gamelist.star %>',
            });
          </script>
          <ul class="list-inline">
            <li class="list-inline-item">
              @<%= gamelist.user.username %>
            </li>
            <li class="list-inline-item">
              <%= l gamelist.created_at, format: :long %>
            </li>
            <% if gamelist.user == current_user %>
              <%= link_to "編集", edit_gamelist_path(gamelist), id: "gamelist-edit-#{gamelist.id}", data: {"turbolinks" => false}, class: 'text-white' %>
              <%= link_to "削除", gamelist_path(gamelist), id: "button-delete-#{gamelist.id}", method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'text-white'  %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
